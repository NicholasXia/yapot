											</render>
											

										</div>
									</div>
								</div>
							</render>
				</div>
			</div>

		

			<template id="idHtmlTpl" style="display:none">
				<form id="idSaveForm" action="#" class="form-horizontal" role="form">	
				<input type="hidden" name="filename" value="{{name}}">	
				<input type="hidden" name="tplname" value="{{tplname}}">
					<div class="form-body">				
						<div class="form-group">
							<label class="col-md-1 control-label">正文</label>
							<div class="col-md-11">
							<textarea id="idUpdateVideoContent" name="content" rows="50"  class="content form-control">{{content}}</textarea>
				
							</div>
						</div>
									
					</div>
					<div class="form-actions nobg fluid">
						<div class="col-md-offset-3 col-md-9">
							<button id="idSaveBT" class="btn green" type="button" class="btn green">保存</button>
							                              
						</div>
					</div>
				</form>

