			<!-- END PAGE HEADER-->
			<!-- BEGIN PAGE CONTENT-->
			<div class="row">
				<div class="col-md-3">
					<div class="portlet blue box">
						<div class="portlet-title">
							<div class="caption"><i class="fa fa-cogs"></i>模板列表</div>
							
						</div>
						<div class="portlet-body">
							<div class="scroller" style="height:350px" data-always-visible="1" data-rail-visible="0">

								<div id="idTplTree" >
									
								</div>
							</div>
						</div>
					</div>
				</div>
				<div  class="col-md-9">
				
							<div style="display:none" id="idError" class="alert alert-block alert-danger fade in">
								<button type="button" class="close" data-dismiss="alert"></button>
								<h4 class="alert-heading">错误提示</h4>
								<p>
									错误内容
								</p>
								
							</div>
							<div style="display:none" id="idSuccess" class="alert alert-block alert-success fade in">
								<button type="button" class="close" data-dismiss="alert"></button>
								<h4 class="alert-heading">成功</h4>
								<p>
									成功内容
								</p>
								
							</div>
							<render id="idInfo">
								<div class="portlet green box">
									<div class="portlet-title">
										<div class="caption"><i class="fa fa-cogs"></i>模板文件代码</div>
										<div class="tools">
											<a href="javascript:;" class="collapse"></a>
											
											
										</div>
									</div>
									<div class="portlet-body form">
										<div class="form-body">
											<render id="idTplInfoRender">
